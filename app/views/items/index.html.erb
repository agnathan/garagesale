<h1>Listing items</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Description</th>
    <th>Prix</th>
    <th>Vendu</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><a class="lightbox" title="<%= item.nom %>" href="<%= item.photo.url(:medium) %>"><%= image_tag item.photo.url(:thumb) %></td></a>
    <td><%=h item.nom %></td>
    <td><%=h item.description %></td>
    <td><%=h item.prix %></td>
    <td><%=h item.vendu %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
